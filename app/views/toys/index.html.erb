<h1>Listing toys</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Owner</th>
    <th>Tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @toys.each do |toy| %>
  <tr>
    <td><%= toy.name %></td>
    <td><%= toy.user %></td>
    <td><%= toy.owner %></td>
    <td><%= toy.tag %></td>
    <td><%= link_to 'Show', toy %></td>
    <td><%= link_to 'Edit', edit_toy_path(toy) %></td>
    <td><%= link_to 'Remove', toy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

